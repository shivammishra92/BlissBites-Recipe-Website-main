<h2 class="pb-4">Search Results</h2>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if (recipe != '') { %>
    <% for( let i = 0; i < recipe.length; i++ ) { %>
        <a href="/recipe/<%= recipe[i]._id %>" class="col text-center category__link">
            <div class="category__img category__img--large shadow">
                <img src="uploads/<%= recipe[i].image%>" alt="<%=recipe[i].name%>" loading="lazy">
            </div>
            <div class="pt-1"><%=recipe[i].name %></div>
        </a>
    <% } %>
    <% } %>
</div>