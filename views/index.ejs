<div class="row flex-lg-row-reverse align-items-center g-3 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="/images/hero-image.png" width="500" height="600" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="">
    </div>

    <div class="col-12 col-lg-6" id="first-hero">
        <h1 class="display-5 fw-bold mb-3">Huge collection of delicious recipe</h1>
        <p class="lead">
            Explore our huge selection of delicious recipe ideas including; easy desserts, delicious vegan and vegetarian dinner ideas, gorgeous pasta
            recipes, quick bakes, family-friendly meals and gluten-free recipe.
        </p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2 d-flex flex-col">Explore Latest</a>
            <a href="/random-recipe" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Show Random</a>
        </div>
    </div>
</div>

<div class="row row-cols-2 row-cols-lg-6 g-5 g-lg-3 py-4">
    <% for( let i = 0; i < categories.length; i++ ) { %>
        <a href="/categories/<%= categories[i].name %>" class="col text-center category__link">
            <div class="category__img shadow">
                <img src="images/<%= categories[i].image%>" alt="<%= categories[i].name%> food" loading="lazy">
            </div>
            <div class="pt-1"><%= categories[i].name%> Food</div>
        </a>
    <% } %>

    <a href="/categories" class="col text-center category__link">
        <div class="category__img shadow">
            <img src="images/view-all.jpg" alt="American food" loading="lazy">
        </div>
        <div class="pt-1">View All Categories</div>
    </a>
</div>

 <!-- Latest Recipes -->
<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>Latest Recipes</h2>
        <a href="/explore-latest" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% for( let i = 0; i < recipes.length; i++ ) { %>
            <a href="/recipe/<%= recipes[i]._id %>" class="col text-center category__link">
                <div class="category__img category__img--large shadow">
                    <img src="uploads/<%= recipes[i].image%>" alt="<%=recipes[i].name%>" loading="lazy">
                </div>
                <div class="pt-1"><%=recipes[i].name %></div>
            </a>
        <% } %>
    </div>
</section>

